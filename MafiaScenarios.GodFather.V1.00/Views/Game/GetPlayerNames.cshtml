@model List<MafiaScenarios.GodFather.V1._00.Models.GetPlayerNamesVM>

@{
    ViewData["Title"] = "GetPlayerNames";
}

<h1>GetPlayerNames</h1>

<h4 class="text-center">اسامی بازیکنان مد نظر را وارد کنید</h4>
<hr />
<div dir="rtl" class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="GetPlayerNames" method="post" class="mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @for (int i = 0; i <= 10; i++)
            {
                <div class="input-group flex-nowrap mb-2">
                    <span class="input-group-text ms-2" id="addon-wrapping">@string.Format("{0:d2}",i+1)</span>
                    @*<label asp-for="@Model[i].Name" class="control-label"></label>*@
                    <div class="w-100">
                        <input asp-for="@Model[i].Name" class="form-control" />
                        <span asp-validation-for="@Model[i].Name" class="text-danger"></span>
                    </div>
                </div>
            }
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <input type="submit" value="ایجاد" class="btn btn-success w-100" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-danger w-100">بازگشت به لیست</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}